rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isAuth() {
      return request.auth != null;
    }
    
    function isAdmin() {
      return isAuth() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    // Users collection - authenticated users only
    match /users/{userId} {
      allow read: if isAuth() && (isOwner(userId) || isAdmin());
      allow write: if isOwner(userId);
      allow create: if isAuth();
    }
    
    // Licenses collection - admin only
    match /licenses/{licenseId} {
      allow read: if isAdmin() || (isAuth() && resource.data.createdBy == request.auth.uid);
      allow write: if isAdmin();
      allow create: if isAdmin();
      allow delete: if isAdmin();
    }
    
    // Conversations collection - user's own conversations
    match /conversations/{conversationId} {
      allow read: if isAuth() && resource.data.userId == request.auth.uid;
      allow write: if isAuth() && resource.data.userId == request.auth.uid;
      allow create: if isAuth();
    }
    
    // Messages collection - user can access their conversation messages
    match /messages/{messageId} {
      allow read: if isAuth() && (
        request.auth.uid == resource.data.userId || 
        get(/databases/$(database)/documents/conversations/$(resource.data.conversationId)).data.userId == request.auth.uid
      );
      allow write: if isAuth() && request.auth.uid == resource.data.userId;
      allow create: if isAuth();
    }
    
    // User IPs - admin only for read/write
    match /user_ips/{docId} {
      allow read: if isAdmin();
      allow write: if isAdmin();
      allow create: if isAuth();
    }
    
    // IP Bans - admin only
    match /ip_bans/{banId} {
      allow read: if isAdmin();
      allow write: if isAdmin();
      allow delete: if isAdmin();
    }
    
    // User Bans - admin only with user read access to their own
    match /bans/{banId} {
      allow read: if isAdmin() || (isAuth() && resource.data.userId == request.auth.uid);
      allow write: if isAdmin();
      allow delete: if isAdmin();
    }
    
    // Maintenance Notices - public read, admin write
    match /maintenance_notices/{noticeId} {
      allow read: if true;
      allow write: if isAdmin();
      allow delete: if isAdmin();
    }
    
    // Settings - admin only
    match /settings/{document=**} {
      allow read: if isAdmin();
      allow write: if isAdmin();
    }
  }
}
